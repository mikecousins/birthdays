{
  "name": "birthdays",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "2.1.2",
    "@tailwindcss/ui": "0.2.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.37",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "tailwindcss": "1.3.4",
    "typescript": "3.8.3"
  },
  "scripts": {
    "start": "npm run css:build && react-scripts start",
    "build": "npm run css:build:purge && react-scripts build",
    "css:build": "tailwind build .tailwind/tailwind.src.css -o src/tailwind.css",
    "css:build:purge": "postcss .tailwind/tailwind.src.css -o src/tailwind.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
